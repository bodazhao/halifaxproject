<% provide(:title, 'Signup') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %> <!-- first f is the fs in the _user partials -->
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>